generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserType {
  ADMINISTRADOR
  MORADOR
  COLABORADOR
}

model Users {
  id                  Int      @id @default(autoincrement())
  name                String
  email               String   @unique
  type                UserType
  status              Boolean  @default(true)
  telefone            String
  numero_do_documento String
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt

  @@map("users")
}

